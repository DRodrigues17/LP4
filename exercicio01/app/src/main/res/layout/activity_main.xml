<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quieres_thumbnail"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_seu_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qual o seu Nome?"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="40sp"
        android:layout_marginTop="-400dp"
        />

    <EditText
        android:id="@+id/et_digite_aqui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="digite aqui"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="40sp"

        app:layout_constraintTop_toBottomOf="@+id/tv_seu_nome"
        />
    <Button
        android:id="@+id/bt_limpar"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:shadowRadius="50"
        android:text="limpar"
        app:layout_constraintTop_toBottomOf="@+id/et_digite_aqui"
        app:layout_constraintStart_toStartOf="@+id/tv_seu_nome"
        />

    <Button
        android:id="@+id/bt_ok"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:shadowRadius="50"
        android:text="ok"

        app:layout_constraintTop_toBottomOf="@+id/et_digite_aqui"
        app:layout_constraintEnd_toEndOf="@+id/tv_seu_nome"
        />
    <TextView
        android:id="@+id/tv_frase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="seu nome vai aparecer aqui"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/tv_seu_nome"
        app:layout_constraintTop_toBottomOf="@+id/bt_ok"
        />

</androidx.constraintlayout.widget.ConstraintLayout>